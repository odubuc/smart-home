@page "/fetchdata"
@using smart_home.Shared
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecast == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            <tr>  
                <td>@forecast.TemperatureC</td>
                <td>@forecast.Humidity</td>
            </tr>
        </tbody>
    </table>
}

@code {
    private WeatherOutdoor forecast;

    protected override async Task OnInitializedAsync()
    {
        forecast = await Http.GetFromJsonAsync<WeatherOutdoor>("WeatherForecast");
    }

}
